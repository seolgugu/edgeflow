apiVersion: v1
kind: Service
metadata:
  name: gateway-tcp-service
  namespace: edgeflow
spec:
  type: ClusterIP
  selector:
    app: gateway
  ports:
    - name: tcp
      port: 8080
      targetPort: 8080
---
apiVersion: v1
kind: Service
metadata:
  name: gateway-http-service
  namespace: evc
spec:
  type: NodePort
  selector:
    app: gateway
  ports:
    - name: http
      port: 8000
      targetPort: 8000
      nodePort: 30080
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: gateway
  namespace: evc
spec:
  replicas: 1
  selector:
    matchLabels:
      app: gateway
  template:
    metadata:
      labels:
        app: gateway
    spec:
      nodeSelector:
        role: infra-core
      containers:
        - name: gateway
          image: {{ image }}
          imagePullPolicy: Always
          ports:
            - containerPort: 8000
            - containerPort: 8080