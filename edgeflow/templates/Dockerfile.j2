FROM --platform=linux/arm64 debian:bookworm
ENV DEBIAN_FRONTEND=noninteractive
ENV OMP_NUM_THREADS=1

# RPi 공식 저장소 추가
RUN apt-get update && apt-get install -y gnupg && \
    echo "deb http://archive.raspberrypi.org/debian/ bookworm main" > /etc/apt/sources.list.d/raspi.list && \
    apt-key adv --keyserver keyserver.ubuntu.com --recv-keys 82B129927FA3303E

# apt로 패키지 통일 (Numpy 충돌 해결)
RUN apt-get update && apt-get install -y --no-install-recommends \
    python3-picamera2 python3-redis python3-opencv \
    python3-torch python3-torchvision python3-pip \
    libopenblas-dev libcamera-tools libgl1 libglib2.0-0 \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app
COPY . .

RUN pip3 install . --break-system-packages

CMD ["python3", "-c", "from main import app; app.run('{{ role }}')"]